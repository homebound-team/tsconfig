{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ESNext"],
    "declaration": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "outDir": "../../../dist",
    "baseUrl": "../../../",
    "paths": {
      "src/*": ["src/*"],
      // See https://github.com/LeDDGroup/typescript-transform-paths/issues/132
      "src": ["src"]
    },
  },
  "include": ["../../../src"],
  "exclude": ["../../../node_modules"]
}
