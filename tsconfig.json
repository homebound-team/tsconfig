{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "moduleResolution": "Node",
    // See https://twitter.com/kuizinas/status/1636641120477384705
    "declarationMap": true,
    "isolatedModules": true,
    "outDir": "../../../dist",
    "baseUrl": "../../../",
    "paths": {
      "src/*": ["src/*"],
      // See https://github.com/LeDDGroup/typescript-transform-paths/issues/132
      "src": ["src"]
    },
  },
  "include": ["../../../src"],
  "exclude": ["../../../node_modules"]
}
